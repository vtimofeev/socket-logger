@import nib;

body {
  margin: 0;
  padding: 0;
  padding-left: 12px;
  font-size: 12px;
  line-height: 21px;
  font-family: "Trebuchet MS", sans-serif;
}

header {
  font-weight: bold;
  font-size: 15px;
  line-height: 24px;
  margin-top: 8px;
  margin-bottom: 8px;

  .clean {
    margin-left: 40px;
  }
}

.sockets {
  border-left: 1px solid #0072C6;
  max-height: 240px;
  padding: 8px;
  overflow: auto;

  ul > li {
    height: 32px;
    line-height: 32px;
  }

  .selected {
    background-color: #0072C6;
  }
}

.logContainer {
  margin-top: 12px;
  font-size: 11px;
  line-height: 19px;

  .log {
  }
  .warn {
    background-color: yellow;
  }
  .error {
    background-color: #eb5183;
  }
  .command {
    background-color: yellowgreen;
  }
}

.root {
  position: absolute;
  z-index: 100;
  right: 0;
  top: 0;

  background-color: #000066;

  width: 50%;
  height: 50%;
  max-width: 300px;
  max-height: 300px;

  overflow: auto;

  touch-action: pan-y;
  -ms-touch-action: pan-y;
  -ms-scroll-chaining: none;
  -ms-scroll-snap-y: mandatory snapInterval(0%, 100%);
  -webkit-overflow-scrolling: touch;

  .inner {
    width: 100%;
    height: 600px;
    background: linear-gradient(top, #81ad24 0%, #ffffff 100%);
    opacity: 0.5;
    overflow: hidden;
  }
}

